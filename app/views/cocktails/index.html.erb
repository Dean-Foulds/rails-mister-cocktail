
<div class="text-center">
  <h1 class="text-center">Cocktail List</h1>
  <li><%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-danger text-decoration: none" %></li>
</div>

<div class="container">
  <div class="row">
    <% @cocktail.each do |cock| %>
      <div class="col-xs-12 col-sm-3">
        <div class="card">
          <%= link_to cock.name, cocktail_path(cock.id) %></li>
        </div>
      </div>
    <% end %>

  </div>
</div>
